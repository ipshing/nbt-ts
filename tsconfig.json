{
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "ESNext",
        "target": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": ["./src/**/*.ts"]
}
